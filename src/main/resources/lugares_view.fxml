<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.islacristina.aplicaciongestionincidencias.controllers.LugarController">

    <TableView fx:id="placesTable" layoutX="20" layoutY="20" prefHeight="400.0" prefWidth="312.0">
        <columns>
            <TableColumn fx:id="placeColumn" text="Lugar" />
        </columns>
    </TableView>
    <TextField fx:id="filterField" layoutX="345.0" layoutY="20.0" prefWidth="200.0" promptText="Buscar lugar"/>
    <Button fx:id="addPlaceButton" layoutX="345.0" layoutY="280.0" text="Insertar lugar" styleClass="green-button" />
    <Button fx:id="deletePlaceButton" layoutX="452.0" layoutY="280.0" text="Borrar lugar" styleClass="red-button"/>
    <Button fx:id="exitButton" layoutX="345.0" layoutY="374.0" text="Salir" styleClass="blue-button"/>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</AnchorPane>