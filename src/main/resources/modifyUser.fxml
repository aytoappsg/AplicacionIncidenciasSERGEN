<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.islacristina.aplicaciongestionincidencias.controllers.ModificarUsuariosController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">

    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Repetir Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="repeatPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox fx:id="roleCombobox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Guardar" onAction="#saveChanges" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
